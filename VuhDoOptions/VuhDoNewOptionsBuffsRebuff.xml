			      <Scripts>
			      	<OnLoad>
			      		VUHDO_lnfSetModel(self, "VUHDO_BUFF_SETTINGS.CONFIG.REBUFF_AT_PERCENT");
						    VUHDO_lnfSliderOnLoad(self, VUHDO_I18N_INDICATE_REBUFF_BELOW, 1, 100, "%", 1);
